<h1 id="login">Enter you details below to login:</h1>

  <% if flash[:danger] %>
    <font color="red"><div class="notice">
    <ul>
    <%= flash[:danger]%>
    </div></font>
    </ul>
  <% end %>



<%= form_for(:session, url: login_path) do |f| %>
    <%= f.text_field :email, placeholder: "email address",  class: "input"%><br>
    <%= f.password_field :password, placeholder: "password",  class: "input"%><br>
    <%= f.submit "Log in", class: "btw" %>
<% end %>








<div>
<p>New User?
<%= link_to "Click here to sign up", new_user_path, class: "link" %>
</p>
</div>
