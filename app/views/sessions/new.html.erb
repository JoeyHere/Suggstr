<h1>Enter you details below to login:</h1>

  <% if flash[:danger] %>
    <font color="red"><div class="notice">
    <ul>
    <%= flash[:danger]%>
    </div></font>
    </ul>
  <% end %>



<%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %><br>
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password %><br>
   
    <%= f.submit "Log in" %>
<% end %>








<p>New User?
<%= link_to "Click here to sign up", new_user_path %>
</p>
