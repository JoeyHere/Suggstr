

<form>
<div class="shadow p-3 mb-5 bg-white rounded">
  <nav class="navbar navbar-expand-lg navbar-normal">
        <h2 class="form-header">Enter you details below to login:</h2>
      
  </nav>

<%= form_for(:session, url: login_path) do |f| %>
    <%= f.text_field :email, placeholder: "email address",  class: "input-form"%><br>
    <%= f.password_field :password, placeholder: "password",  class: "input-form"%><br>
    <%= f.submit "Log in", class: "btn btn-primary btn-m rounded-pill mt-2" %>
<% end %>
</form>







<div>
