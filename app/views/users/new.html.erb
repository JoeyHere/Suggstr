<%if logged_in? %>
<h1>Hi <%= current_user.name %>!</h1>
<% else %>


<h1>Sign up to Suggstr</h1>
<h3>And start suggstng!</h3>

  <br>

  <% if flash[:errors] %>
    <div><font color="red">
    <ul>
    <% flash[:errors].each do |error| %>
    <li><%= error %></li>
    <% end %>
    </div></font>
    </ul>
    </font></div>
  <% end %>


<%= form_for @user do |f| %>
    <%= f.text_field :name, placeholder: "name" %><br>
    <%= f.text_field :username, placeholder: "username" %><br>
    <%= f.text_field :email, placeholder: "email address" %><br>
    <%= f.password_field :password, placeholder: "password" %><br>

    <%= f.submit "Sign up" %>
<% end %>

<p>Already have an account?
<%= link_to "Click here to login", login_path %>
</p>

<% end %>
