<h1>Sign up or Sign in</h1>



  <% if flash[:errors] %>
    <div class="notice"><font color="red">
    <ul>
    <% flash[:errors].each do |error| %>
    <li><%= error %></li>
    <% end %>
    </ul>
    </font></div>
  <% end %>

<%= form_for @user do |f| %>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %><br>
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password %><br>

    <%= f.submit %>
<% end %>
