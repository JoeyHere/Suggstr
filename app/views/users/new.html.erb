
<%if logged_in? %>
<h1>Hi <%= current_user.name %>!</h1>
<% else %>



<h1>Sign up up to Suggstr</h1>
<h3>And start suggstng!</h3>
  
  <br>


  <% if flash[:errors] %>
    <font color="red"><div class="notice">
    <ul>
    <% flash[:errors].each do |error| %>
    <li><%= error %></li>
    <% end %>
    </div></font>
    </ul>
  <% end %>

  

<%= form_for @user do |f| %>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %><br>
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password %><br>
   
    <%= f.submit "Sign up" %>
<% end %>

<p>Already have an account?
<%= link_to "Click here to login", login_path %>
</p>

<% end %>