
<h2><%=@medium.title %> - <small>(<%=@medium.type.name %>)</small></h2>

<% if !@medium.rating_history["Good"].nan? %>
<h4><%= number_to_percentage(@medium.rating_history["Good"]*100, precision: 0) %> of people liked this <%= @medium.type.name %></h4>
<% end %>

<h3>Tags:</h3>

<ul>
  <% @medium.tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag %>
    </li>
  <% end %>
</ul>

<%= form_for @medium do |f| %>
<div class="selectize">
  <div class="selectize-tags" style="display: block; visibility: visible; width: 360px; top: 38px; left: 0px;">
    <label for="input-tags">Tags:</label>
    <input type="text" id="input-tags" name="tags" >
  </div>
  <script>
    $('#input-tags').selectize({
        delimiter: ',',
        persist: false,
        create: function(input) {
            return {
                value: input,
                text: input
            }
        }
    });
  </script>
</div>

<%= button_to "Add", f.submit, class: 'btn btn-success'  %>
<% end %>

<p><%= pluralize(@medium.users.length, "user") %> <%= @medium.users.length == 1 ? "has" : "have" %> this in their queue</p>

<%= link_to "Suggest", medium_suggestion_path(@medium), class: 'btn btn-success' %>
